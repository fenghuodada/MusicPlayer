<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/musicplay"
    tools:context=".MusicPlayActivity">
    <RelativeLayout
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/bottom_music"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.7"
        android:background="#EE2A7A6A">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:alpha="0.7"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/music_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/music"/>
    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/music_song"
        android:layout_toRightOf="@id/music_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="song"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="singer"
        android:layout_below="@id/music_song"
        android:id="@+id/music_singer"
        android:layout_alignLeft="@id/music_song"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/music_right"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:alpha="0.8"/>
    <ImageView
        android:id="@+id/music_Pause"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/test8"
        android:layout_toLeftOf="@id/music_right"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10dp"
        android:alpha="0.8"/>
    <ImageView
        android:id="@+id/music_left"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/left"
        android:layout_toLeftOf="@id/music_Pause"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:layout_marginRight="20sp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/music_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="15"
        android:layout_above="@id/bottom_music">
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>