<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34494A"
    tools:context=".PersionalMusicPlay">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/test8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/musicPlayCenterImage"/>
    <SeekBar
        android:id="@+id/musicPlayCenterSeekbar"
        android:thumbTint="#F733A89A"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@id/musicPlayCenterCard"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="100dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/musicPlayCenterCard"
        app:cardCornerRadius="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/cardview_shadow_start_color"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/musicPlayCenterBottomLast"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:alpha="0.4"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_pause_circle_outline_24"
                android:alpha="0.4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/musicPlayCenterBottomPause"/>
            <ImageView
                android:id="@+id/musicPlayCenterBottomNext"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:alpha="0.4"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/musicPlayCenterList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/musicPlayCenterCard"
        android:layout_alignRight="@id/musicPlayCenterCard"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/baseline_format_list_bulleted_24" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/musicPlayCenterCard"
        android:layout_alignRight="@id/musicPlayCenterCard"
        android:layout_marginBottom="10dp"
        android:text="02:20"
        android:textSize="16sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:id="@+id/musicPlayCenterendTime"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/musicPlayCenterCard"
        android:layout_alignLeft="@id/musicPlayCenterCard"
        android:layout_marginBottom="10dp"
        android:text="02:20"
        android:textSize="16sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:id="@+id/musicPlayCenterstartTime"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicPlayCenterImage"
        android:text="@string/song"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/musicPlayCenterSong"
        android:textColor="#4CAF50"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicPlayCenterSong"
        android:text="@string/singer"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/musicPlayCenterSinger"
        android:textColor="#4CAF50"/>


</RelativeLayout>