<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    app:contentPadding="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="#D0C193"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/music_item">
    <TextView
        android:id="@+id/music_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_item_song"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/music_item_num"
        android:singleLine="true"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_item_singer"
        android:layout_below="@id/music_item_song"
        android:layout_alignLeft="@id/music_item_song"
        android:textColor="#888"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/music_item_shu"
        android:layout_width="2dp"
        android:layout_height="16dp"
        android:layout_toRightOf="@id/music_item_singer"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#888"
        android:layout_alignTop="@id/music_item_singer"
        android:layout_below="@id/music_item_song"/>
    <TextView
        android:id="@+id/music_item_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#888"
        android:layout_toRightOf="@id/music_item_shu"
        android:layout_alignTop="@id/music_item_singer"
        android:singleLine="true"
        android:ellipsize="end"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/music_item_time"
        android:layout_below="@id/music_item_singer"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textColor="#888"
        android:layout_centerVertical="true"/>





</RelativeLayout>



</androidx.cardview.widget.CardView>